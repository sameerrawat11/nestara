 <p style="font-size: x-large; font-weight: 600;text-align: center;">Discover where this place is located&nbsp;&nbsp;<i class="fa-solid fa-map"></i></p>
<div id="map" style="height: 300px; width: 80rem; "></div>

<script>
  // inject server token and coords before loading map.js
  window.MAP_TOKEN = "<%= MAP_TOKEN %>";
  // pass coords or null
  window.LISTING_COORDS = <%- JSON.stringify(
    (typeof listing !== 'undefined' && listing.geometry && listing.geometry.coordinates)
      ? listing.geometry.coordinates
      : null
  ) %>;

  console.log('DEBUG MAP_TOKEN ->', !!window.MAP_TOKEN, 'DEBUG LISTING_COORDS ->', window.LISTING_COORDS);
</script>

<script src="https://api.mapbox.com/mapbox-gl-js/v3.17.0/mapbox-gl.js"></script>
<script src="/js/map.js"></script>

<% if (listing.reviews && listing.reviews.length > 0) { %>
  <div class="row">
    <div class="col-12" style="font-size: x-large;"><p><b>All Reviews</b></p></div>
    <% for (let review of listing.reviews) { %>
      <div class="card col-3 ms-3 mb-3">
 <div class="card-body ">
     <h5 class="card-title">@<%= review.author && review.author.username ? review.author.username : "User" %></h5>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <% if (currUser && review.author && String(currUser._id) === String(review.author._id)) { %>
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        <% } %>
      </div>
    <% } %>
   
  </div>
  
<% } %>
