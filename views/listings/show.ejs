<div class="row mt-3">
  <div class="col-12 offset-3" style="  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
 font-weight: bolder; font-size: x-large !important;">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-12 col-md-6 offset-md-3 show-card listing-card">
    <img
      src="<%= listing.image && listing.image.url ? listing.image.url : listing.image %>"
      class="card-img-top show-img"
      alt="listingimg"
      onerror="this.style.display='none'"
    />
    <div class="card-body" style="color: black;">
      <p class="card-text" style="color: black;"><i>Belongs to <%= listing.owner ? listing.owner.username : "Unknown" %></i></p>
      <p class="card-text" style="color: black;"><%= listing.description %></p>
      <p class="card-text" style="color: black;"><i class="fa-solid fa-indian-rupee-sign"></i>&nbsp;&nbsp;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></p>
      <p class="card-text" style="color: black;"><i class="fa-solid fa-map-location"></i>&nbsp;&nbsp;<%= listing.location || "" %></p>
      <p class="card-text" style="color: black;"><i class="fa-solid fa-earth-americas"></i>&nbsp;&nbsp;<%= listing.country || "" %></p>
    </div>
  </div>
</div>

<br>

