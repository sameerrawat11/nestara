<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
         <div class="auth-page">
        <div class="auth-box">
        <h1 class="col-6 offset-2 ls">Login on Nestara</h1>
        <div class="col-8 offset-2">
            <form action="/accessacc" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" id="username" class="form-control" required>
                </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" placeholder="enter the Password" id="password" class="form-control" required>
        </div>

        <button class="btn btn-success">Login</button>
            </form>
        </div>
        </div>
        </div>
    </div>